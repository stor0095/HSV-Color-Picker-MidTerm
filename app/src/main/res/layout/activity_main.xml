<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.stor0095.hsvcolorpicker.MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/colorSwatch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:height="200dp"
        android:background="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hue"
        android:id="@+id/hueTextView"
        android:labelFor="@+id/hue"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/hueSB" />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/hueSB"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:max="359"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_one"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Saturation"
        android:id="@+id/saturationTextView"
        android:labelFor="@+id/greenSB"
        android:layout_below="@+id/hueSB"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:id="@+id/saturationSB"
        android:max="100"
        android:layout_below="@+id/saturationTextView"
        android:background="@drawable/selector_three"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value / Lightness"
        android:id="@+id/valueLightTextView"
        android:labelFor="@+id/greenSB"
        android:layout_below="@+id/saturationSB"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/valueLightTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/valueLightSB"
        android:max="100"
        android:background="@drawable/selector_two"
        android:layout_alignParentEnd="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/valueLightSB"
        android:layout_toEndOf="@+id/hueTextView"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/buttonGroupOne">

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/blackButton"
                android:onClick="onClick"
                android:background="#000"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/redButton"
                android:onClick="onClick"
                android:background="#FF0000"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/greenButton"
                android:background="#00FF00"
                android:onClick="onClick"
                android:layout_weight="1"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/blueButton"
                android:background="#0000FF"
                android:onClick="onClick"
                android:layout_weight="1"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/limeButton"
                android:onClick="onClick"
                android:background="#00FF00"
                android:layout_weight="1"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/yellowButton"
                android:onClick="onClick"
                android:background="#FFFF00"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/silverButton"
                android:background="#C0C0C0"
                android:onClick="onClick"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/navyButton"
                android:background="#000080"
                android:onClick="onClick"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/grayButton"
                android:onClick="onClick"
                android:background="#808080"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/tealButton"
                android:background="#008080"
                android:onClick="onClick"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/purpleButton"
                android:background="#800080"
                android:onClick="onClick"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/oliveButton"
                android:onClick="onClick"
                android:background="#808000"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/maroonButton"
                android:onClick="onClick"
                android:background="#800000"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/magentaButton"
                android:background="#ff00ff"
                android:onClick="onClick"
                android:layout_weight="1"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/cyanButton"
                android:onClick="onClick"
                android:background="#00ffff"
                android:layout_weight="1"/>

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
